<?xml version="1.0"?>

<robot xmlns="http://drake.mit.edu"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://drake.mit.edu ../../doc/drakeURDF.xsd" name="Acrobot">

  <link name="body">
    <inertial>
      <origin xyz="0 0 -.5" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="1" ixy="0" ixz="0" iyy="0.083" iyz="0" izz="1" />
    </inertial>
    <visual>
      <geometry>
        <box size="0.1 0.1 1.0" />
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1" />
      </material>
    </visual>
    <collision name="body_collision">
      <geometry>
        <box size="0.1 0.1 1.0" />
      </geometry>
    </collision>
  </link>

  <link name="nozzle_mid">
    <inertial>
      <origin xyz="0 0 -0.005" rpy="0 0 0" />
      <mass value="0.1" />
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.1" />
    </inertial>
    <visual>
      <origin xyz="0 0 -0.005" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.01" radius="0.05" />
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1" />
      </material>
    </visual>
  </link>

  <link name="nozzle">
    <inertial>
      <origin xyz="0 0 -0.05" rpy="0 0 0" />
      <mass value="0.1" />
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.1" />
    </inertial>
    <visual>
      <origin xyz="0 0 -0.05" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.1" radius="0.05" />
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1" />
      </material>
    </visual>
  </link>

  <joint name="gimbal_x" type="revolute">
    <parent link="body" />
    <child link="nozzle_mid" />
    <origin xyz="0 0.0 -0.5" />
    <axis xyz="1.0 0.0 0.0" />
  </joint>

  <joint name="gimbal_y" type="revolute">
    <parent link="nozzle_mid" />
    <child link="nozzle" />
    <origin xyz="0 0.0 -0.01" />
    <axis xyz="0.0 1.0 0.0" />
  </joint>

  <force_element name="motor">
    <thrust lower_limit="0" upper_limit="10" scale_factor_thrust="1.0" scale_factor_moment="0.0">
      <parent link="nozzle"/>
      <origin xyz="0 0 0"/>
      <axis xyz="0 0 1"/>
    </thrust>
  </force_element>


  <transmission type="SimpleTransmission" name="gimbal_x_trans">
    <actuator name="gimbal_x" />
    <joint name="gimbal_x" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>
  <transmission type="SimpleTransmission" name="gimbal_y_trans">
    <actuator name="gimbal_y" />
    <joint name="gimbal_y" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>
</robot>
